<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0E86D4</item>
        <item name="colorPrimaryVariant">#0E86D4</item>
        <item name="colorPrimaryDark">#0E86D4</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextStyle">@font/open_sans_extrabold</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="DefaultTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="TitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="PrimaryTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimaryTextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryTextStyle.Black">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="PrimaryTextStyle.PrimaryColor">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="PrimaryTextStyle.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PrimaryTextStyle.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PrimaryTextStyle.Regular" parent="DefaultTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PrimaryTextStyle.Regular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PrimaryTextStyle.Regular.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryTextStyle.Regular.Black">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="PrimaryTextStyle.Regular.PrimaryColor">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="SecondaryTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">@dimen/font_size_secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SecondaryTextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryTextStyle.Black">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="ExtraTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">@dimen/font_size_titleExtra</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="CaptionTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="CaptionTextStyle.Medium">
        <item name="fontFamily"> @font/poppins_medium </item>
    </style>

    <style name="CaptionTextStyle.Medium.PrimaryColor">
        <item name="android:textColor"> @color/primary_color </item>
    </style>

    <style name="CaptionTextStyle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CaptionTextStyle.Black">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="CaptionTextStyle.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CardRadius">
        <item name="cornerFamily">rounded</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="myCustomAppBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_size_secondary</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:height">@dimen/height_action_bar</item>
        <item name="height">@dimen/height_action_bar</item>
    </style>





    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextLabelSearch">
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--    <style name="SecondaryTextStyle" parent="DefaultTextStyle">-->
    <!--        <item name="android:textSize">@dimen/font_size_secondary</item>-->
    <!--        <item name="android:fontFamily">@font/poppins_medium</item>-->
    <!--    </style>-->

    <style name="CircleButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconPadding">@dimen/zero</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="android:padding">@dimen/zero</item>
        <item name="iconTint">@color/blue2</item>
    </style>

    <style name="DefaultButton" parent="CircleButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconPadding">@dimen/zero</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="android:padding">@dimen/zero</item>
        <item name="iconTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="borderWidth">2dp</item>
        <item name="strokeColor">@color/primary_color</item>

    </style>
</resources>